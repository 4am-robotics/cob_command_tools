<?xml version="1.0" ?>
<launch>

	<!-- start cob teleop node -->
	<node pkg="cob_teleop" type="teleop_cob" name="cob_teleop" output="screen">

		<!--remap from="cmd_vel" to="base_controller/command" /-->

		<!-- axes -->
		<param name="axis_vx" value="5" type="int" />
		<param name="axis_vy" value="4" type="int" />
		<param name="axis_vw" value="2" type="int" />

		<!-- buttons -->
		<param name="lower_neck_button" value="6" type="int" />
		<param name="upper_neck_button" value="4" type="int" />
		<param name="tray_button" value="5" type="int" /> 
		<param name="arm_joint12_button" value="0" type="int" />
		<param name="arm_joint34_button" value="1" type="int" />
		<param name="arm_joint56_button" value="2" type="int" />
		<param name="arm_joint7_button" value="3" type="int" />

		<!-- variable steps -->
		<!-- torso -->
		<param name="lower_tilt_step" value="0.15" type="double"/>
		<param name="lower_pan_step" value="0.05" type="double"/>
		<param name="upper_tilt_step" value="0.1" type="double"/>
		<param name="upper_pan_step" value="0.05" type="double"/>
		<!-- tray -->
		<param name="tray_step" value="0.15" type="double"/>
		<!-- base -->
		<param name="max_vx" value="0.6" type="double"/>
		<param name="max_vy" value="0.6" type="double"/>
		<param name="max_vw" value="0.8" type="double"/>
		<!-- arm -->
		<param name="arm_left_right_step" value="0.1" type="double"/>
		<param name="arm_up_down_step" value="0.1" type="double"/>

	</node>

	<!-- run joystick -->
	<node pkg="joy" type="joy_node" name="joy_node">
		<param name="dev" type="string" value="/dev/input/js0" />
		<param name="deadzone" value="0.12" />
	</node>

</launch>
